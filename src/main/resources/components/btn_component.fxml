<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import java.net.URL?>


<fx:root type="javafx.scene.layout.GridPane"
  fx:id="btnGrid"
  xmlns:fx="http://javafx.com/fxml"
  alignment="center"
  hgap="2"
  vgap="2"
  styleClass="grid_btn">

<padding>
  <Insets top="10"
          right="10"
          bottom="5"
          left="0" />
</padding>

<!-- <gridLinesVisible>true</gridLinesVisible> -->
<columnConstraints>
  <ColumnConstraints minWidth="80.0" prefWidth="80.0" />
  <ColumnConstraints minWidth="80.0" prefWidth="80.0" />
  <ColumnConstraints minWidth="80.0" prefWidth="80.0" />
</columnConstraints>

<rowConstraints>
  <RowConstraints minHeight="60.0" prefHeight="60.0" />
  <RowConstraints minHeight="60.0" prefHeight="60.0" />
  <RowConstraints minHeight="60.0" prefHeight="60.0" />
  <RowConstraints minHeight="60.0" prefHeight="60.0" />
  <RowConstraints minHeight="60.0" prefHeight="60.0" />
</rowConstraints>



  <!-- Column one -->
  <Button fx:id="7"
          text="7"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          styleClass="btn"
          onAction="#handleButtonAction" />

  <Button fx:id="4"
          text="4"
          GridPane.columnIndex="0"
          GridPane.rowIndex="1"
          styleClass="btn"
          onAction="#handleButtonAction" />

  <Button fx:id="1"
          text="1"
          GridPane.columnIndex="0"
          GridPane.rowIndex="2"
          styleClass="btn"
          onAction="#handleButtonAction" />

  <Button fx:id="0"
          text="0"
          GridPane.columnIndex="0"
          GridPane.rowIndex="3"
          styleClass="btn"
          onAction="#handleButtonAction" />

  <Button fx:id="open_bracket"
          text="("
          GridPane.columnIndex="0"
          GridPane.rowIndex="4"
          styleClass="btn"
          onAction="#handleButtonAction" />



  <!-- Column two -->
  <Button fx:id="8"
          text="8"
          GridPane.columnIndex="1"
          GridPane.rowIndex="0"
          styleClass="btn"
          onAction="#handleButtonAction" />

  <Button fx:id="5"
          text="5"
          GridPane.columnIndex="1"
          GridPane.rowIndex="1"
          styleClass="btn"
          onAction="#handleButtonAction" />

  <Button fx:id="2"
          text="2"
          GridPane.columnIndex="1"
          GridPane.rowIndex="2"
          styleClass="btn"
          onAction="#handleButtonAction" />

  <Button fx:id="dot"
          text="."
          GridPane.columnIndex="1"
          GridPane.rowIndex="3"
          styleClass="btn"
          onAction="#handleButtonAction" />

  <Button fx:id="close_bracket"
          text=")"
          GridPane.columnIndex="1"
          GridPane.rowIndex="4"
          styleClass="btn"
          onAction="#handleButtonAction" />



  <!-- Column three-->
  <Button fx:id="9"
          text="9"
          GridPane.columnIndex="2"
          GridPane.rowIndex="0"
          styleClass="btn"
          onAction="#handleButtonAction" />

  <Button fx:id="6"
          text="6"
          GridPane.columnIndex="2"
          GridPane.rowIndex="1"
          styleClass="btn"
          onAction="#handleButtonAction" />

  <Button fx:id="3"
          text="3"
          GridPane.columnIndex="2"
          GridPane.rowIndex="2"
          styleClass="btn"
          onAction="#handleButtonAction" />

  <Button fx:id="equal_to"
          text="="
          GridPane.columnIndex="2"
          GridPane.rowIndex="3"
          styleClass="btn"
          onAction="#handleButtonAction" />

  <Button fx:id="add"
          text="+"
          GridPane.columnIndex="2"
          GridPane.rowIndex="4"
          styleClass="btn"
          onAction="#handleButtonAction" />



  <Button fx:id="C"
          text="C"
          GridPane.columnIndex="3"
          GridPane.rowIndex="0"
          styleClass="side_btn"
          onAction="#handleButtonAction" />

  <Button fx:id="AC"
          text="⬅️"
          GridPane.columnIndex="3"
          GridPane.rowIndex="1"
          styleClass="side_btn"
          onAction="#handleButtonAction" />

  <Button fx:id="prod"
          text="x"
          GridPane.columnIndex="3"
          GridPane.rowIndex="2"
          styleClass="side_btn"
          onAction="#handleButtonAction" />

  <Button fx:id="div"
          text="/"
          GridPane.columnIndex="3"
          GridPane.rowIndex="3"
          styleClass="side_btn"
          onAction="#handleButtonAction" />

  <Button fx:id="sub"
          text="-"
          GridPane.columnIndex="3"
          GridPane.rowIndex="4"
          styleClass="side_btn"
          onAction="#handleButtonAction" />

  <stylesheets>
    <URL value="@btn.css" />
  </stylesheets>

</fx:root>